<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/browseProfiles"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="368dp"
        android:layout_height="62dp"
        android:layout_marginTop="112dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:text="Browse Profiles"
        android:fontFamily="@font/monsterrat_regular"
        android:textAlignment="textStart"
        android:textColor="#062E19"
        android:textSize="15sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/LightGreen"
        app:strokeWidth="1dp"
        />

    <Button
        android:id="@+id/browseEvents"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="368dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:text="Browse Events"
        android:fontFamily="@font/monsterrat_regular"
        android:textAlignment="textStart"
        android:textColor="#062E19"
        android:textSize="15sp"
        app:backgroundTint="@android:color/transparent"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/browseProfiles"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/LightGreen"
        app:strokeWidth="1dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/edit_delete_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#5C8971"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="-1dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="@string/back_button_description"
            android:src="@drawable/ic_arrow_back_2" />

        <TextView
            android:id="@+id/textViewProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/monsterrat_regular"
            android:text="@string/admin_options"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/backButton"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>

</androidx.constraintlayout.widget.ConstraintLayout>