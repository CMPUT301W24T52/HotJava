<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/monsterrat_regular</item>
    </style>
    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="tabIndicatorColor">#474E44</item>
        <item name="tabSelectedTextColor">#56786C</item>
        <item name="tabTextColor">#747688</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>
</resources>